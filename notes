

!!Picker or ListWheelScroll for input selection

retask Quit button -> Conf -> settings icon in toolbar MDC-104 codelab for examples

Name TextInput

Opponent picker

<setup_screen>
import 'package:flutter/material.dart';
import 'package:layouttest/lp_player.dart';
import 'package:layouttest/main.dart';


class SetupScreen extends StatelessWidget {

  String nameString;
  int opponentAI;
  lpPlayer player;
  lpPlayer opponent;

  SetupScreen(lpPlayer Player, lpPlayer Opponent) {
    player = Player;
    opponent = Opponent;
    nameString = Player.getName();
    opponentAI = Opponent.getAIIndex();
  }



  void saveConfig() {
    player.setName('Tom');
    opponent.setAIIndex(3);
  }

  @override
  Widget build(BuildContext context) {
    return new Scaffold(
      appBar: new AppBar(
        title: new Text("lp setup"),
      ),
      body: new Column(
        children: [
          new Text('Name input'),
          new Text('Pick opponenet'),
          new RaisedButton(
            onPressed: () {
              saveConfig();
              Navigator.pop(context);
            },
            child: new Text('Save'),
          ),
        ],
      ),
    );
  }
}
