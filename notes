Widget Hint(String msg){	      
new AlertDialog(
        title: new Text('Hint'),
        content: new SingleChildScrollView(
          child: new ListBody(
            children: <Widget>[
              new Text(msg),
                          ],
          ),
        ),
        actions: <Widget>[
          new FlatButton(
            child: new Text('Dismiss'),
            onPressed: () {
              Navigator.of(context).pop();
            },
          ),
        ],
      );	      
	      
